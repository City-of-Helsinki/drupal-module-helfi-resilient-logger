{
  "name": "drupal/helfi_resilient_logger",
  "description": "Resilient logger module for Drupal utilizing monolog.",
  "type": "drupal-module",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.1",
    "drupal/monolog": "^3.0",
    "city-of-helsinki/php-resilient-logger": "dev-main"
  },
  "require-dev":{
    "drupal/core-dev": "^10.2"
  },
  "repositories": [
    {
        "type": "vcs",
        "url": "https://github.com/City-of-Helsinki/php-resilient-logger.git"
    }
  ],
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "phpstan/extension-installer": true,
      "tbachert/spi": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
